@page "{id}"
@model task8.Pages.Movies.DeleteModel
@{
}
<div class="container">
	<h1>Ви дійсно хочете видалити фільм @(Model.Movie.Id). @Model.Movie.Title</h1>
	<form metod="post" asp-antiforgery="true" style="display: inline">
		<input type="hidden" name="id" value="@Model.Movie.Id" />
